<!--            android:id="@+id/carnumber"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:maxLines="1"-->
<!--            android:layout_marginTop="5dp"-->
