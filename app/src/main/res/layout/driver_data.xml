<!--            android:layout_below="@+id/vehModel"-->
<!--            android:hint="UK 06 J 5454"-->
<!--            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />-->


        <ImageView
            android:id="@+id/rupeeimage"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/vehModel"
            android:layout_marginTop="10dp"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/rupeen"
           />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/vehModel"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/rupeeimage"
            android:hint="INR 56990"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/rupeeimage"
            android:textStyle="bold"
            android:textColor="#008000"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>